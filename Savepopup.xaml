<Page x:Class="CarParker.Savepopup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarParker"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="500"
      Title="Savepopup"
      >

    <Grid  Background="White">
        <TextBox  x:Name="TextBox1" Width="400" Height="20" Background="Wheat"/>
        <Button  x:Name="Savebtn" Content="save"   Height="30" Width="70" Margin="0,100,250,0"
                 Click="Savebtn_Click"/>
        <Button  x:Name="SaveAsbtn"   Content="saveAs"   Height="30" Width="70" Margin="230,100,0,0"
                  Click="SaveAsbtn_Click"/>
    </Grid>
</Page>
