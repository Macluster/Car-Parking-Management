<Page x:Class="CarParker.PreCarParkingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarParker"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="PreCarParkingPage">

    <Grid Background="#343f56">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button  x:Name="EntrancePageButton" Margin="50,0,50,300" Height="30" Content="Entrance" FontSize="20"  Opacity="0.7" Background="LightSkyBlue" Foreground="White" Click="EntrancePageButton_Click"/>
        <Button Name="ExitPageButton"  Margin="50,100,50,250" Height="30" Content="Exit" FontSize="20" Opacity="0.7" Background="PaleVioletRed" Foreground="White" Click="ExitPageButton_Click"/>
        <Image Source="Images/tollflat.png" Grid.Column="2" />






    </Grid>
</Page>
